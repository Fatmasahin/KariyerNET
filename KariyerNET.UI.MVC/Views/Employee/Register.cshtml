@model  KariyerNET.Model.EmployeeSide.Login
@{
    ViewBag.Title = "Kayıt Ol";
}

<div class="container">
    <div class="offset-3 col-6 p-5">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group w-100 text-center">
                <h2>HR DANIŞMANLIK ÜYE GİRİŞİ</h2>
                <br />
                <span class="text-primary" style="font-weight:bold">Yeni kariyer hedefinde doğru yerdesin...</span>
                <br />
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="form-group w-100">
                <span class="text-dark">Ad (*)</span>
                @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control col-md-12", type = "mail", placeholder = "Adınızı giriniz..." })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group w-100">
                <span class="text-dark">Soyad (*)</span>
                @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                @Html.TextBoxFor(a => a.SurName, new { @class = "form-control col-md-12", type = "mail", placeholder = "Soyadınızı giriniz..." })
                @Html.ValidationMessageFor(model => model.SurName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group w-100">
                <span class="text-dark">E-Mail</span>
                @*@Html.ValidationSummary(true, "Geçerli bir e posta adresi giriniz...", new { @class = "text-danger" })*@
                @Html.TextBoxFor(a => a.LoginMail, new { @class = "form-control col-md-12", type = "mail", placeholder = "E-posta adresinizi giriniz..." })
                @Html.ValidationMessageFor(model => model.LoginMail, "", new { @class = "text-danger" })
            </div>
            <div class="form-group w-100">
                <span class="text-dark">Şifre</span>
                @*@Html.ValidationSummary(true, "Parola boş geçilemez...", new { @class = "text-danger" })*@
                @Html.TextBoxFor(a => a.Password, new { @class = "form-control col-md-12", type = "password", placeholder = "Şifrenizi giriniz..." })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group w-100">
                <button type="submit" class="btn btn-success w-100 mt-3">Üye Ol</button>
                @Html.ActionLink("Şifremi unuttum.", "ForgetPassword", "Employee", new { @class = "btn btn-primary w-100 mt-2" })
                @Html.ActionLink("Giriş Yap", "Login", "Employee", new { @class = "btn btn-primary w-100 mt-2" })
            </div>
        }


        @{
            if (ViewBag.Error != null)
            {
                <div class="alert-danger">
                    @ViewBag.Error
                </div>
            }
        }
    </div>
</div>
